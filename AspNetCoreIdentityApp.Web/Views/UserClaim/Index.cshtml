@model List<ClaimViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Claims</h4>
            <p class="card-description">
                Claim İşlemleri:
            </p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Dağıtan: </th>
                        <th> Type: </th>
                        <th> Value: </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        count++;
                        <tr>
                            <td> @count</td>
                            <td> @x.Issuer</td>
                            <td> @x.Type </td>
                            <td> @x.Value </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
