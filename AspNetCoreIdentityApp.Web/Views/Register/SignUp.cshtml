@model SignUpViewModel
@{
    Layout = null;
}
@section Scripts {
    @*daha sunucuya gitmeden validation işlemini otomatik olarak yapar.*@
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Identity Kayıt Paneli</title>
    <link rel="stylesheet" href="~/register/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/register/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/register/assets/css/style.css">
    <link rel="shortcut icon" href="~/register/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/register/assets/images/logo.svg">
                            </div>

                            @*ModelOnly=> Identityin global olarak vermiş olduğu hatalardır
                            proplarıma ait hatalarımı göstermek için değil yani
                            *@
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            </div>

                            <h4>Yeni Hesap Oluşturun!</h4>
                            <h6 class="font-weight-light">Sitemizdeki İçeriklere Erişmek İçin Kayıt Olun.</h6>
                            @if (TempData["SuccessMessage"]!=null)
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["SuccessMessage"]
                                </div>
                            } 
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label asp-for="Username"></label>
                                    <input type="text" class="form-control form-control-lg" asp-for=Username  placeholder="Kullanıcı Adınız">
                                    <span class="text-info" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input type="email" class="form-control form-control-lg" asp-for="Email"  placeholder="Mail Adresiniz">
                                    <span class="text-info" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone"></label>
                                    <input type="text" class="form-control form-control-lg" asp-for="Phone" placeholder="Telefon Numaranız">
                                    <span class="text-info" asp-validation-for="Phone"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" asp-for=Password class="form-control form-control-lg"  placeholder="Şifreniz">
                                    <span class="text-info" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input type="password" asp-for=ConfirmPassword class="form-control form-control-lg" placeholder="Şifre Tekrar">
                                    <span class="text-info" asp-validation-for="ConfirmPassword"></span>
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Şartları Ve Politikaları Kabul Ettim.
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabınız Var Mı? Varsa Giriş Yapın <a href="/Login/SignIn" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
        
    </div>
    <script src="~/register/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/register/assets/js/off-canvas.js"></script>
    <script src="~/register/assets/js/hoverable-collapse.js"></script>
    <script src="~/register/assets/js/misc.js"></script>
</body>
</html>