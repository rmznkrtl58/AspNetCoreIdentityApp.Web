@model SignInViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="~/register/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/register/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/register/assets/css/style.css">
    <link rel="shortcut icon" href="~/register/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/register/assets/images/logo.svg">
                            </div>
                            @*ModelOnly=> Identityin global olarak vermiş olduğu hatalardır
                            proplarıma ait hatalarımı göstermek için değil yani
                            *@
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            </div>
                            <h4>Giriş Yap</h4>
                            <h6 class="font-weight-light">Hesabınız Var İse Giriş Yapın.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label asp-for="Mail"></label>
                                    <input asp-for=Mail type="email" value="rmznkrtl1453@gmail.com" class="form-control form-control-lg"  placeholder="Mail Adresinizi Giriniz">
                                    <span asp-validation-for="Mail"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" asp-for=Password value="111111Qq*" class="form-control form-control-lg"  placeholder="Şifrenizi Giriniz">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Beni Hatırla!
                                        </label>
                                    </div>
                                    <a href="/Login/ForgetPassword/" class="auth-link text-black">Şifremi Unuttum</a>
                                </div>
                                <div class="mb-2">
                                    <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                        <i class="mdi mdi-facebook mr-2"></i>Facebook İle Bağlan
                                    </button>
                                    <button type="button" class="btn btn-block btn-google auth-form-btn">
                                        <i class="mdi mdi-google mr-2"></i>Google İle Bağlan
                                    </button>
                                    <button type="button" class="btn btn-block btn-linkedin auth-form-btn">
                                        <i class="mdi mdi-linkedin mr-2"></i>Linkedin İle Bağlan
                                    </button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabınız Yok Mu? O Halde Kayıt Olun <a href="/Register/SignUp" class="text-primary">Yeni Kayıt</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/register/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/register/assets/js/off-canvas.js"></script>
    <script src="~/register/assets/js/hoverable-collapse.js"></script>
    <script src="~/register/assets/js/misc.js"></script>
</body>
</html>
