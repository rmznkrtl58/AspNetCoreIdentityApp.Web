@model List<UserListViewModel>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcılar</h4>
            <p class="card-description">
                Kullanıcı İşlemleri: 
            </p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Kullanıcı Adı: </th>
                        <th> Mail: </th>
@*                         <th> Roller: </th>
 *@                        <th> Sil </th>
                        <th> Detaylar </th>
                        <th> Rol Ata </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        count++;
                        <tr>
                        <td> @count</td>
                        <td> @x.UserName</td>
                        <td> @x.UserMail </td>
@*                         <td> <user-role-names user-id="@x.UserId"></user-role-names> </td>
 *@                        <td> <a href="/Default/DeleteUser/@x.UserId" class="btn btn-danger">Sil</a> </td>
                        <td> <a href="/Default/UserDetails/@x.UserId" class="btn btn-warning">Detaylar</a> </td>
                        <td> <a href="/Role/AssignRoleToUser/@x.UserId" class="btn btn-primary">Rol Ata</a> </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

