@model UserEditViewModel
@{
    ViewData["Title"] = "UserInfo";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @*ModelOnly=> Identityin global olarak vermiş olduğu hatalardır
            proplarıma ait hatalarımı göstermek için değil yani
            *@
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
            </div>
            @if (TempData["updateSuccess"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["updateSuccess"]
                </div>
            }
            <h4 class="card-title">Kullanıcı Bilgileri:</h4>
            <p class="card-description">Aşağıdan Bilgilerinize Ulaşabilirsiniz.Eğer Değiştirmek İstediğiniz İşlemler Varsa Aşağıdan Yapabilirsiniz.</p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı:</label>
                    <input type="text" asp-for=Username class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi:</label>
                    <input type="email" asp-for=Email class="form-control" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Telefon:</label>
                    <input type="text" asp-for=Phone class="form-control"  placeholder="Telefon Numarası">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3" asp-for="City"></label>
                    <select asp-for="City" asp-items="ViewBag.cities" class="form-control">
                        <option value="">Şehir Seçiniz</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Cinsiyet:</label>
                    <select asp-for="Gender" asp-items="ViewBag.genders" class="form-control">
                        <option value="">Cinsiyet Seçiniz</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate"></label>
                    <input type="datetime" class="form-control" asp-for="BirthDate" />
                </div>
                <div class="form-group">
                    <label asp-for="Picture"></label>
                    <input type="file" class="form-control" asp-for="Picture" />
                </div>
                <button  class="btn btn-gradient-warning mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>
