@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @ViewData["SuccessMessage"]
    </div>
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Rol Bilgileri:</h4>
            <p class="card-description">Rol Güncelleme Paneli</p>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group">
                    <label for="exampleInputName1">Rol Adı:</label>
                    <input type="text" asp-for=Name class="form-control" id="exampleInputName1" placeholder="Rol Adını Giriniz">
                </div>
                <button class="btn btn-gradient-warning mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>


