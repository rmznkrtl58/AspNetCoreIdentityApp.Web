@model List<RoleListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @if (TempData["successMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["successMessage"]
                </div>
            }
            <h4 class="card-title">Role Listesi</h4>
            <p class="card-description">
                Role İşlemleri:
            </p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Rol Adı: </th>
                        <th> Sil </th>
                        <th> Detaylar </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        
                        count++;
                        <tr>
                            <td> @count</td>
                            <td> @x.Name</td>
                            <td> <a href="/Role/DeleteRole/@x.Id" class="btn btn-danger">Sil</a> </td>
                            <td> <a href="/Role/UpdateRole/@x.Id" class="btn btn-warning">Detaylar</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a style="margin-top:6px" href="/Role/CreateRole/" class="btn btn-success">Yeni Rol</a>
        </div>
    </div>
</div>

